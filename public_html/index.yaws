    <div class="frame">
      <h2>Recently Modified</h2>
      <erl>
%<!--
out(Arg) ->
    Recents = recent(),
    {html, file2img(Recents)}.

recent() ->
    Date = ets:first(dates),
    recent(Date, [], 0).

recent('$end_of_table', Files, _) ->
    Files;
recent(Date, Files, N)
  when N < 10 ->
    case ets:lookup(dates, Date) of
        [{Date, File}] ->
            F = sets:to_list(File),
            recent(ets:next(dates, Date), [F | Files], N + length(F));
        _ ->
            Files
    end;
recent(_, Files, _) ->
    Files.


file2img(Files) ->
    file2img(Files, []).

file2img([], Imgs) ->
    Imgs;
file2img([File | T], Imgs) ->
    Img = io_lib:format("        <div class=\"image\"><a href=\"~s\"><img alt=\"~s\" src=\"~s\"/></a></div>\n",
                        [File, File, File]),
    file2img(T, [Img | Imgs]).
%-->
      </erl>
