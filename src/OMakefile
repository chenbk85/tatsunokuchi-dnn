# for debug
#CXXFLAGS += -Wall -O0 -g

# for release
CXXFLAGS += -Wall -O3 -funroll-loops

LDFLAGS += -lcv -lcxcore -lhighgui -lboost_system -lboost_filesystem -lboost_program_options -ltcmalloc

SRC[] =
	ccv
	lshforest
	dbh
	hist
	kmeans
	surf
	hash_t

SRC_SURF[] =
	$(SRC)
	dnn_surf

SRC_DBH[] =
	$(SRC)
	dnn_dbh

SRC_SIM[] =
	$(SRC)
	dnn_sim

.PHONY: clean static dnn_surf dnn_dbh dnn_sim

dnn_surf: $(CXXProgram dnn_surf, $(SRC_SURF))
dnn_dbh: $(CXXProgram dnn_dbh, $(SRC_DBH))
dnn_sim: $(CXXProgram dnn_sim, $(SRC_SIM))

clean:
        rm -f *~ *.a *.o dnn_surf dnn_dbh dnn_sim

.DEFAULT: static dnn_surf dnn_dbh dnn_sim